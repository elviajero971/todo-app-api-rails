
<div class="w-full h-full lg:h-screen flex justify-center items-center">
  <div class="w-full lg:w-1/2 bg-blue-700 shadow-md rounded-3xl px-8 pt-6 pb-8 mt-6">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'w-full max-w-sm flex flex-col') do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="flex items-center justify-center mb-6 w-full">
          <div class="w-full lg:w-2/3 lg:mx-4">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
          </div>
        </div>
        <div class="flex items-center justify-center mb-6 w-full">
          <div class="w-full lg:w-2/3 lg:mx-4">
            <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password', class: "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
          </div>
        </div>
        <div class="flex items-center justify-center mb-6 w-full">
          <div class="w-full lg:w-2/3 lg:mx-4">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Password confirmation', class: "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
          </div>
        </div>

        <div class="flex items-center justify-center mb-6 w-full">
          <div class="flex w-full lg:w-2/3 lg:mx-4 justify-around">
            <div class="w-1/2">
                <%= f.submit "Sign up", class: "shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" %>
            </div>
            <div class="w-1/2">
              <%= link_to "Log in", new_session_path(resource_name), class: 'hover:text-purple-500 hover:font-bold' %>
            </div>
          </div>
        </div>
        <div class="flex items-center justify-center w-full">
          <div class="w-full lg:w-2/3 lg:mx-4">
            <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: 'hover:text-purple-500 hover:font-bold' %>
          </div>
        </div>
      <% end %>
  </div>
</div>

